extends ../layout
block head
  link(href='/build/car.css',rel='stylesheet')
block content
  .recent-car.on-listing
    .container
      .recent-car-content
        .row
          .col-md-6
            #myCarousel.carousel.slide(data-ride='carousel')
              // Indicators
              ol.carousel-indicators
                -each imgCover,i in car.cover_l
                  if i==0
                    li.active(data-target='#myCarousel', data-slide-to='#{i}')
                  else
                    li(data-target='#myCarousel', data-slide-to='#{i}')
              // Wrapper for slides
              .carousel-inner(role='listbox')
                -each imgCover,i in car.cover_l
                  if i==0
                    .item.active
                      img(src='#{imgCover}', alt='...') 
                   else   
                    .item
                      img(src='#{imgCover}', alt='...')
              a.left.carousel-control(href='#myCarousel', role='button', data-slide='prev')
                span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                |     
                span.sr-only Previous
              |   
              a.right.carousel-control(href='#myCarousel', role='button', data-slide='next')
                span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                |     
                span.sr-only Next                                                              
          .col-md-6
            .car-details
              a(href='single-car.html')
                h4 #{car.name}
              span ￥#{car.price_off||car.price}万
              .line-dec
              p #{car.summary}
              ul.car-info.col-md-6
                li
                  span Fabrication:
                  p 2013/2014
                li
                  span Speed:
                  p 160p/h
                li
                  span Mileage:
                  p 30.000km - 40.000km
                li
                  span Fuel:
                  p Petrol
              ul.car-info.col-md-6
                li
                  span Color:
                  p Black
                li
                  span Transmition:
                  p Automatic
                li
                  span Dors:
                  p 4/5
                li
                  span Engine:
                  p 2500cm3
              .contact-info
                .row
                  .col-md-6.col-sm-6.col-xs-6
                    i.fa.fa-phone
                    span 0038 / 49 - 511 - 868
                  .col-md-6.col-sm-6.col-xs-6
                    i.fa.fa-envelope
                    span youremail@gmail.com