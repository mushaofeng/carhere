extends ../layout

block content
  .container
    .row
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if cars && cars.length > 0
            each item in cars
              .col-md-2
                .thumbnail
                  a(href='/car/#{item._id}')
                    img(src='#{item.poster}',alt='item.title')
                  .caption
                    h3 #{item.title}
                    p: a.btn.btn-primary(href='/car/#{item._id}',role='button')
                      观看预告片！
      ul.pagination
        - for (var i=0;i<totalPage;i++){
          - if (currentPage == i+1){
              li.active
                span #{currentPage}
            - }
          - else {
              li
                a(href="/results?#{query}&p=#{i}") #{i+1}
            - }
        - }

