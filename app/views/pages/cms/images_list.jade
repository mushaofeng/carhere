extends ../../layout_cms
block content
  table.table.table-hover.table-striped
    thead
      tr
        th 名字
        th 查看
        th 删除
    tbody
      each item in list
        tr(class="item-id-#{item._id}")
          td #{item.name}
          //- td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
          td: a(target="_blank",href="/cms/images/update/#{item._id}") 查看
          td
            a.btn-delete(data-id=item.name data-url='/cms/images/delete?name=') 删除            
block bottom
  script(src="/assets/js/page/admin.js")
                 
