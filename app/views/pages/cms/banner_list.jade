extends ../../layout_cms
block content
      table.table.table-hover.table-striped
        thead
          tr
            th 链接地址
            th banner图片地址
            th 排序
            th 更新
            //- th 删除
        tbody
          each item in banner
            tr(class="item-id-#{item._id}")
              td #{item.link}
              td #{item.url}
              td #{item.order}
              td: a(target="_blank",href="/cms/banner/update/#{item._id}") 修改
              //- td
                button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
  script(src="/assets/js/main.js")                  
