extends ../adminlayout
block content
      table.table.table-hover.table-striped
        thead
          tr
            th 汽车名
            th 汽车型号
            th 售卖价格
            th 售卖数量
            th 查看
            th 更新
            //- th 删除
        tbody
          each item in cars
            tr(class="item-id-#{item._id}")
              td #{item.name}
              td #{item.type}
              td #{item.price}
              td #{item.sell_num}
              td: a(target="_blank",href="/car/#{item._id}") 查看
              td: a(target="_blank",href="/admin/car/update/#{item._id}") 修改
              //- td
                button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
  script(src="/assets/js/main.js")                  
